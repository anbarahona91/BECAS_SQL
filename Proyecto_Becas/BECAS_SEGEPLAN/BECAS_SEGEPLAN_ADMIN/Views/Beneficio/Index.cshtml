@using DevExtreme.AspNet.Mvc


@(Html.DevExtreme().DataGrid<BECAS_SEGEPLAN_DATA.Models.Beneficio>()
    .DataSource(ds => ds.Mvc()
        .Controller("BeneficioApi")
        .LoadAction("Get")
        .InsertAction("Insert")
        .UpdateAction("Update")
        .UpdateMethod("POST")
        .DeleteAction("Delete")
        .DeleteMethod("POST")
        .Key("idbeneficio")
    )
    .RemoteOperations(true)
    .Columns(columns => {

        columns.AddFor(m=>m.Nombre).DataField("nombre");

        columns.AddFor(m => m.Vigente).DataField("vigente").AllowFiltering(false);

    })
    .Editing(e => e.Mode(GridEditMode.Popup)
        .AllowAdding(true)
        .AllowUpdating(true)
        .AllowDeleting(true)
        .Popup(p => p
                .Title("Beneficio")
                .ShowTitle(true)
                .Width(1000)
                .Height(700)
            )
    )
    .FilterRow(filterRow => filterRow
        .Visible(true)
        .ApplyFilter(GridApplyFilterMode.Auto)
    )
    .ShowBorders(true)
    .Scrolling(scrolling => scrolling.RowRenderingMode(GridRowRenderingMode.Virtual))
    .Paging(paging => paging.PageSize(10))
    .Pager(pager => {
        pager.Visible(true);
        pager.DisplayMode(GridPagerDisplayMode.Full);
        pager.ShowPageSizeSelector(true);
        pager.AllowedPageSizes(new JS("[5, 10, 'todos']"));
        pager.ShowInfo(true);
        pager.ShowNavigationButtons(true);
    })
)